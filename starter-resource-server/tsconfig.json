{	
	"compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
		"target": "es2016",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"esModuleInterop": true,
		"lib": [
			"es2017",
			"esnext.asynciterable"
		]
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
